using System;
using System.Collections.Generic;

class Notice
{
public int Id { get; set; }
public string Title { get; set; }
public string Content { get; set; }
public DateTime CreatedDate { get; set; }
}

class Program
{
static List
	notices = new List();

    static void Main(string[] args)
    {
        bool exit = false;

        while (!exit)
        {
            Console.Clear();
            Console.WriteLine("1. 공지사항 등록");
            Console.WriteLine("2. 공지사항 수정");
            Console.WriteLine("3. 공지사항 삭제");
            Console.WriteLine("4. 공지사항 목록");
            Console.WriteLine("5. 종료");
            Console.Write("메뉴를 선택하세요: ");
            string input = Console.ReadLine();

            switch (input)
            {
                case "1":
                    AddNotice();
                    break;
                case "2":
                    UpdateNotice();
                    break;
                case "3":
                    DeleteNotice();
                    break;
                case "4":
                    DisplayNotices();
                    break;
                case "5":
                    exit = true;
                    break;
                default:
                    Console.WriteLine("유효한 메뉴를 선택하세요.");
                    break;
            }

            Console.WriteLine("계속하려면 아무 키나 누르세요...");
            Console.ReadKey();
        }
    }

    static void AddNotice()
    {
        Console.Clear();
        Console.WriteLine("=== 공지사항 등록 ===");
        Console.Write("제목: ");
        string title = Console.ReadLine();
        Console.Write("내용: ");
        string content = Console.ReadLine();

        int id = notices.Count > 0 ? notices[notices.Count - 1].Id + 1 : 1;
        DateTime createdDate = DateTime.Now;

        Notice newNotice = new Notice
        {
            Id = id,
            Title = title,
            Content = content,
            CreatedDate = createdDate
        };

        notices.Add(newNotice);

        Console.WriteLine("공지사항이 등록되었습니다.");
    }

    static void UpdateNotice()
    {
        Console.Clear();
        Console.WriteLine("=== 공지사항 수정 ===");
        Console.Write("수정할 공지사항 ID: ");
        int id = Convert.ToInt32(Console.ReadLine());

        Notice notice = notices.Find(n => n.Id == id);

        if (notice != null)
        {
            Console.Write("새로운 제목: ");
            string newTitle = Console.ReadLine();
            Console.Write("새로운 내용: ");
            string newContent = Console.ReadLine();

            notice.Title = newTitle;
            notice.Content = newContent;

            Console.WriteLine("공지사항이 수정되었습니다.");
        }
        else
        {
            Console.WriteLine("해당 ID의 공지사항이 존재하지 않습니다.");
        }
